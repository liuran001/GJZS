<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/kr_param_color_text"
        android:minHeight="35dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="@string/kr_please_input_color"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLength="9"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/kr_param_color_invalid"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:padding="2dp"
        android:src="@drawable/kr_warn" />

    <View
        android:id="@+id/kr_param_color_preview"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:padding="2dp" />

    <ImageButton
        android:id="@+id/kr_param_color_picker"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/kr_color"
        android:tint="@android:color/darker_gray" />
</LinearLayout>
